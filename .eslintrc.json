{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "extends": "airbnb",
  "globals": {
    "jQuery": true,
    "$": true,
    "app": true,
    "Translator": true,
    "Swiper": true
  },
  "rules": {
    "func-names": 0,
    "space-before-function-paren": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "one-var": 0,
    "no-use-before-define": 0,
    "comma-dangle": 0,
    "class-methods-use-this": 0,
    "one-var-declaration-per-line": 0,
    "no-unused-expressions": 0,
    "arrow-body-style": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    
    // 待改进
    "no-unused-vars": 1,
    "no-var": 1,
    "vars-on-top": 1,
    "prefer-template": 1,
    "spaced-comment": 1,
    "quotes": 1,
    "prefer-arrow-callback": 1,
    "no-underscore-dangle": 1,
    "prefer-const": 1,
    "prefer-rest-params": 1,
    "eol-last": 1,
    "keyword-spacing": 1,
    "object-shorthand": 1
  }
}
