{% extends 'my/money-record/layout.html.twig' %}

{% set main_nav = 'IncomeRecords' %}

{% block main_body %}
  <table class="table table-striped table-hover" id="incomes-table">
    <thead>
      <th>{{'my.money_record.money'|trans}}</th>
      <th>{{'my.money_record.recharge_mode'|trans}}</th>
      <th>{{'my.money_record.transaction_num'|trans}}</th>
      <th>{{'my.money_record.recharge_time'|trans}}</th>
    </thead>
    <tbody>
      {% if incomeRecords %}
        {% for incomeRecord in incomeRecords %}
          <tr>
            <td>{{ incomeRecord.amount }}</td>
            <td></td>
            <td>{{'my.money_record.price.RMB'|trans({'%transactionNo%':incomeRecord.transactionNo})}}</td>
            <td>{{ incomeRecord.createdTime|date('Y-n-d H:i') }}</td>
          </tr>
        {% else %}
          <tr>
            <td colspan="20" class="empty">{{'my.money_record.empty'|trans}}</td>
          </tr>
        {% endfor %}
      {% endif %}
    </tbody>
  </table>
    {{ web_macro.paginator(paginator) }}
{% endblock %}