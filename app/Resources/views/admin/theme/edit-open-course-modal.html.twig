{% extends 'admin/theme/edit-modal-layout.html.twig' %}

{% block custom_orderby %}
	<div class="form-group">
	  <label class="col-md-3 control-label">{{'admin.setting.theme.manage.modal.setting_custom_orderby'|trans}}</label>
	  <div class="col-md-4 controls">
	    <select id="orderBy" name="orderBy" required="required" class="form-control width-input width-input-large">
	        <option value="latest">{{'site.datagrid.filter.latest'|trans}}</option>
	        <option value="hitNum">{{'site.datagrid.filter.hotest'|trans}}</option>
	        <option value="recommendedSeq">{{'site.datagrid.filter.recommended'|trans}}</option>
	    </select>
	    <div class="help-block" style="display:none;"></div>
	  </div>
	</div>
{% endblock %}

{% block custom_category_count %}{% endblock %}

