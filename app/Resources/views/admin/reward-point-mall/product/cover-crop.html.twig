<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button class="close" type="button" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">{{'图片裁剪'|trans}}</h4>
    </div>
    <div class="modal-body">

      <form id="templet-crop-form" method="post" >

        <div class="form-group clearfix">
          <div class="col-md-offset-2 col-md-8 controls">
            <img class="img-responsive" src="{{ filepath(pictureUrl) }}" id="templet-crop" width="{{scaledSize.width}}" height="{{scaledSize.height}}" data-natural-width="{{ naturalSize.width }}" data-natural-height="{{ naturalSize.height }}" />
            <div class="help-block">{{'提示：请选择图片裁剪区域。'|trans}}</div>
          </div>
        </div>
        <div class="form-group clearfix">
          <div class="col-md-offset-2 col-md-8 controls">
            <a class="btn btn-fat btn-primary"
               id="upload-templet-btn"
               data-goto-url="{{path('admin_reward_point_product_cover_crop')}}"
            >{{'保存'|trans}}</a>
          </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
      </form>

    </div>
    <div class="modal-footer">
      <button class="btn btn-link pull-right" type="button" data-dismiss="modal">{{'关闭'|trans}}</button>
      <script>app.load('topxiaadminbundle/controller/reward-point-mall/cover-crop-modal')</script>
    </div>
  </div>
</div>


