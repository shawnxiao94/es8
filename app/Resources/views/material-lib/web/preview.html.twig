{% extends 'old-bootstrap-modal-layout.html.twig' %}


{% set modal_class = 'modal-lg' %}

{% block title %}<span class="color-gray">{{'material_lib.preview.content_title'|trans}}</span>{% endblock %}

{% block body %}
    {% if file.type in ['video', 'audio', 'ppt', 'document', 'image', 'flash'] %}
    <div id="material-preview-player"
        style="height:100%;overflow:hidden;"
        data-url="{{path('material_lib_file_player', {fileId: file.id})}}">
    </div>
    {% else %}
    <div class="text-center">
      {{'material_lib.preview.not_support_tips'|trans}}
    </div>
    {% endif %}

  {% include 'seajs_loader_compatible.html.twig' with {topxiawebbundle: true} %}
  <script>app.lazyLoad = function() { app.load('topxiawebbundle/controller/material-lib/preview') };</script>
{% endblock %}

{% block footer %}
	<button type="button" class="btn btn-primary" data-dismiss="modal">{{'form.btn.close'|trans}}</button>
{% endblock %}
