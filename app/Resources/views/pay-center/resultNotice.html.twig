{% extends 'layout.html.twig' %}

{% block title %}{{'pay_center.remind'|trans}} - {{ parent() }}{% endblock %}

{% block content %}

<div id="page-message-container" class="page-message-container">
  <div class="page-message-panel">
    <div class="page-message-heading">
      <h2 class="page-message-title">{{'pay_center.remind.content_title'|trans}}</h2>
    </div>
    <div class="page-message-body">
      {% if setting('payment.alipay_type') == 'escow' %}
        {{'pay_center.remind.school_escow_tips'|trans}}
      {% else %}
      	{{'pay_center.remind.person_escow_tips'|trans}}
      {% endif %}
		  <a class="color-success fsm" href="http://www.alipay.com">{{'pay_center.remind.pay_in_alipay_btn'|trans}} &raquo;</a>
		</div>
	</div>
  </div>
</div>
{% endblock %}
