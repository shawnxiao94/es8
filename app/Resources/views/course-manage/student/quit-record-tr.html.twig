{% import "macro.html.twig" as web_macro %}
<tr >
  <td class="media" style="vertical-align: middle;">
    {{ web_macro.user_avatar(refund['user'], 'pull-left', 'avatar-sm') }}
    <a class="link-primary" target="_blank" href="{{ path('user_show', {id:refund['user'].id}) }}">{{ refund['user'].nickname }}</a>
    <div class="color-gray text-sm">{{'course.members_manage.quit_records.join_time'|trans}}{{ refund['order'].createdTime|date('Y-n-d H:i') }}</div>

  </td>
  <td style="vertical-align: middle;word-break: break-all;">
      {{ refund.reasonNote }}
  </td>
  <td style="vertical-align: middle;">
      {{ refund.createdTime|date('Y-n-d H:i') }}
  </td>
  {% if refund.actualAmount == 0 %}
  <td style="vertical-align: middle;">
    --
  </td>
  <td style="vertical-align: middle;">
    --
  </td>
  {% else %}
  <td style="vertical-align: middle;">
    {% if refund.status == 'success' %}
      {{'course.members_manage.quit_records.success'|trans}}
    {% elseif refund.status == 'failed' %}
      {{'course.members_manage.quit_records.failed'|trans}}
    {% elseif refund.status == 'cancelled' %}
      {{'course.members_manage.quit_records.cancel'|trans}}
    {% endif %}
  <td style="vertical-align: middle;">
    {{ refund.actualAmount }}
  </td>
  {% endif %}
</tr>
