{% extends (course_count(course.courseSetId) > 1 ? 'course' : 'courseset') ~ '-manage/layout.html.twig' %}

{% block title %}{{'course.dashboard.content_title'|trans}} - {{ course.title }} - {{ parent() }}{% endblock %}
{% set side_nav = 'dashboard' %}

{% block main %}
  <div class="panel panel-default">
    {% include 'course-manage/panel-header/course-publish-header.html.twig' with {code: side_nav} %}
    <div class="panel-body dashboard-panel">
      <ul class="nav nav-pills mbl">
        <li class="{% if submenu|default() == 'course_dashboard' %}active{% endif %}">
          <a href="{{ path('course_set_manage_course_dashboard',{courseSetId: course.courseSetId, courseId:course.id, tab: 'course'}) }}">{{ 'course.dashboard.course_dashboard'|trans }}
          </a>
        </li>

        <li class="{% if submenu|default() == 'task_dashboard' %}active{% endif %}">
          <a href="{{ path('course_set_manage_course_dashboard',{courseSetId: course.courseSetId, courseId:course.id, tab: 'task'}) }}">{{ 'course.dashboard.success_rate'|trans }}
          </a>
        </li>

        <li class="{% if submenu|default() == 'task_learn_dashboard' %}active{% endif %}">
          <a href="{{ path('course_set_manage_course_dashboard',{courseSetId: course.courseSetId, courseId:course.id, tab: 'task-detail'}) }}">{{ 'course.dashboard.study_detail'|trans }}
          </a>
        </li>

      </ul>
      {% block dashboard %}{% endblock %}
    </div>
  </div>
{% endblock %}
