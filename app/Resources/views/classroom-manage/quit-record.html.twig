 {% extends 'classroom-manage/students.html.twig' %}

{% block title %}{{ 'classroom.exit_record'|trans }} - {{ parent() }}{% endblock %}

{% set submenu = 'record' %}
{% do script(['app/js/classroom-manage/students-manage/index.js'])%}

{% block maincontent %}
	<form class="form-inline well well-sm " action="" method="get" novalidate>
    <div class="form-group col-md-7">
      <input class="form-control " style="width:45%" type="text" placeholder="{{ 'classroom.student_placeholder'|trans }}" name="keyword" value="{{ app.request.get('keyword') }}">

      <button class="btn btn-primary">{{ 'form.btn.search'|trans }}</button>
    </div>
    <div class="clearfix"></div>
  </form>
  
	<table class="table table-striped" id="quit-record-list">
    <thead>
      <tr>
        <th>{{ 'classroom.student_username'|trans }}</th>
        <th width="30%">{{ 'classroom.student_exit_reason'|trans }} </th>
        <th>{{ 'classroom.student_exit_date'|trans }}</th>
        <th>{{ 'classroom.refund_status'|trans }}</th>
        <th>{{ 'classroom.refund_money'|trans }}
          <span class="glyphicon glyphicon-question-sign color-gray" id="refund-coin-tips" data-toggle="tooltip" data-placement="bottom" href="javascript:" title="" data-original-title=""></span>
          <div id="refund-coin-tips-html" style="display:none;">
            <div style="width:150px;">
              <span>{{ 'classroom.refund_record_tips'|trans }}</span><br>
            </div>
          </div>
        </th>
		
      </tr>
    </thead>
    <tbody>
      {% for refund in refunds %}
        
        {% include ('classroom-manage/quit-record-tr.html.twig') %}
      {% else %}
        <tr class="empty"><td colspan="20">{{ 'classroom,student_empty'|trans }}</td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}
{% endblock %}